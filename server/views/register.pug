extends layout

block content
    .container
        div.col-md-6.col-md-offset-3
            form.form-signin(role="form", action="/register", method="post")
                h2.form-signin-heading Be one of us
                div.form-group
                    input.form-control.input-lg(type="text", name="name", placeholder="Your Name")
                div.form-group
                    input.form-control.input-lg(type="text", name="username", placeholder="Your Username")
                div.form-group
                    input.form-control.input-lg(type="password", name="password", placeholder="Your Password")
                div.form-group
                    button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign Up